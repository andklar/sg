New Task

<%= form_for(@task) do |f| %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_field :description %>
  </div>

  <div class="field">
    <%= f.label :points %><br />
    <%= f.number_field :points %>
  </div>

  <div class="field">
    <%= f.select :task_type, [['Answer','answer_tasks'],['Photo','photo_tasks']] %>
  </div>

  <div class="field">
    <%= f.label :answer %><br />
    <%= f.text_field :answer %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>

<% end %>
